<h1>Bienvenido usuario Premium!</h1>
<section id="perfil">
    <div>
        <ul>
            <li>Nombre completo: {{profile.first_name}} {{profile.last_name}}</li>
            <li>ID: {{profile._id}}</li>
            <li>{{profile.email}}</li>
            <li>Edad: {{profile.age}}</li>
            <li>Rol: {{profile.role}}</li>
        </ul>
    </div>

    <div>
        <h2>Cargar imagen de perfil</h2>
        <form action='/api/users/profile' method="POST" enctype="multipart/form-data">
            <input type="hidden" name="userId" value="{{profile._id}}">
            <input type="file" name="file" accept="image/*" required>
            <button type="submit">Subir imagen</button>
        </form>
    </div>

    <a href="/api/products/backoffice">
        <h2>Ir al administrador de productos</h2>
    </a>
    <a href="/api/products">
        <h3>Volver al listado general</h3>
    </a>
</section>
